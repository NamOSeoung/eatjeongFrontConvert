<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/popular_bottom_border">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/popular_index_left"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.025"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/popular_index_right"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/popular_index"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:gravity="center_vertical"
                    android:text="4.2"
                    android:textColor="#333333"
                    android:textSize="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/popular_index_left"
                    app:layout_constraintEnd_toEndOf="@+id/popular_index_right"
                   />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/popular_keyword"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:fontFamily="@font/nanumsquareroundr"
                android:gravity="center_vertical"
                android:text="4.2"
                android:textColor="#333333"
                android:textSize="12dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/popular_index_right"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>


