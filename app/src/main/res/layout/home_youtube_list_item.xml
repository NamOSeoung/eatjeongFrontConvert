<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_movie_parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/youtube_image"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:background="@android:color/white"
                    app:layout_constraintBottom_toTopOf="@id/youtube_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/youtube_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="youtube_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:lineSpacingExtra="5dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/nanumsquareroundb"
                    app:layout_constraintEnd_toEndOf="@id/youtube_image"
                    app:layout_constraintStart_toStartOf="@id/youtube_image"
                    app:layout_constraintTop_toBottomOf="@id/youtube_image"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
