<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="horizontal">

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_item_movie_parent"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom">

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tistory_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:adjustViewBounds="true"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tistory_title"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_title"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:lineSpacingExtra="5dp"
                    android:layout_marginTop="5dp"
                    android:paddingHorizontal="5dp"
                    android:text="tistory_title"
                    android:textColor="#333333"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/tistory_write_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tistory_image"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintVertical_weight="6"
                    />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_write_date"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="2020.00.00"
                    android:textColor="#888888"
                    android:fontFamily="@font/nanumsquareroundr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tistory_author"
                    app:layout_constraintStart_toStartOf="@id/tistory_title"
                    app:layout_constraintTop_toBottomOf="@+id/tistory_title"
                    app:layout_constraintVertical_weight="3"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_author"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="작성자"
                    android:textColor="#888888"
                    android:fontFamily="@font/nanumsquareroundr"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/tistory_title"
                    app:layout_constraintStart_toEndOf="@id/tistory_write_date"
                    app:layout_constraintTop_toBottomOf="@id/tistory_title" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
