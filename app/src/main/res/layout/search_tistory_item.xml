<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            card_view:cardCornerRadius="17dp"
            card_view:cardElevation="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/firstLin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:maxLines="1"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="5dp"
                    android:gravity="center_vertical"
                    android:text="tistory_title"
                    android:textColor="#494949"
                    android:textSize="15dp"
                    app:layout_constraintBottom_toTopOf="@+id/tistory_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_weight="1" />

            <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/tistory_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/tistory_write_date"
                    app:layout_constraintEnd_toStartOf="@id/tistory_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tistory_description" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_description"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:gravity="top"
                    android:lineSpacingExtra="8dp"
                    android:maxLines="2"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="tistory_description\ntistory_description \ntistory_description"
                    android:textColor="#555555"
                    android:textSize="14dp"
                    app:layout_constraintBottom_toTopOf="@id/tistory_write_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tistory_image"
                    app:layout_constraintTop_toBottomOf="@id/tistory_title"
                    app:layout_constraintVertical_weight="2" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_write_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:gravity="bottom"
                    android:paddingHorizontal="5dp"
                    android:paddingBottom="5dp"
                    android:text="tistory_write_date"
                    android:textColor="#888888"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tistory_author"
                    app:layout_constraintStart_toStartOf="@id/tistory_description"
                    app:layout_constraintTop_toBottomOf="@id/tistory_description"
                    app:layout_constraintVertical_weight="1" />

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tistory_author"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanumsquareroundr"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:paddingHorizontal="5dp"
                    android:paddingBottom="5dp"
                    android:text="tistory_author"
                    android:textColor="#888888"
                    android:textSize="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/tistory_write_date"
                    app:layout_constraintEnd_toEndOf="@id/tistory_description"
                    app:layout_constraintStart_toEndOf="@id/tistory_write_date"
                    app:layout_constraintTop_toTopOf="@id/tistory_write_date" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
